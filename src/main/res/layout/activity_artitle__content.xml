<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Artitle_Content">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/title_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/cat" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:paddingBottom="15dp"
            >
            <TextView
                android:id="@+id/content_title"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_marginBottom="5dp"
                android:text="Title" />
            <TextView
                android:id="@+id/content_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_marginLeft="9dp"
                android:layout_marginBottom="5dp"
                android:inputType="textMultiLine"
                android:text="Introduce" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/circle_content"
                android:text="必備條件" />

            <TextView
                android:id="@+id/content_requirements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:inputType="textMultiLine"
                android:textSize="18dp"
                android:text="material" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/steps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="實做方法"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/circle_content"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="methods"
                android:inputType="textMultiLine"
                android:textSize="18dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="種植時要注意的"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/circle_content"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/content_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:inputType="textMultiLine"
                android:text="notice"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>